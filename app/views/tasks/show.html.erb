<p>Title: <%= @task.title %></p>
<p>Details: <%= @task.details %></p>
<p>Completed: <%= @task.completed? %></p>

<p><%= link_to "Back to tasks", href="/tasks" %></p>
<p><%= link_to "Edit this task", href="/tasks/#{@task.id}/edit" %></p>
<p><%= link_to "Delete this task", task_path(@task),
data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
